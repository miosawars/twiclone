<!DOCTYPE html>
<html>
  <head>
    <title>Twiclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to('Twiclone', '/', class: "link") %>
      </div>
      <div class = header-menu>
        <% if @current_user %>
        <ul>
          <li><%= link_to(@current_user.name, "/users/#{@current_user.id}") %></li>
          <li><%= link_to("ユーザー一覧", "/users/index") %></li>
          <li><%= link_to("ログアウト", "/logout", {method: :post}) %></li>
        </ul>
        <% else %>
        <ul>
        <li><%= link_to("ユーザー一覧", "/users/index") %></li>
        <li><%= link_to("新規登録", "/signup") %></li>
        <li><%= link_to("ログイン", "/login") %></li>
        </ul>
        <% end %>
      </div>

      <% if flash[:notice] %>
        <div id="notice" class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </header>

    <%= yield %>
  </body>
</html>
