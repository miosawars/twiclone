<div class="login_form">
  <div class="container">

    <% if @error_message %>
      <div class="error_message">
      <p><%= @error_message %></p>
      </div>
      <% end %>


    <%= form_tag("/login") do %>
    <h2>ログイン</h2>
    <p>メールアドレス</p>
    <input name="email" value="<%= @email %>">
    <p>パスワード</p>
    <input name="password" type="password" value="<%= @password %>">
    <input type="submit" value="ログイン">
    <% end %>
  </div>
</div>
